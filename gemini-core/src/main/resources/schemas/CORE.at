#  ====  Gemini Core Module =====


# Meta information about a entity record (this is a special entity)
# All entities use CoreMeta as an interface for Meta Information
INTERFACE CoreMeta {
    DATETIME    created
    DATETIME    modified
}

INTERFACE Domain {
    TEXT            code  *
    TEXT		    description
}

ENTITY Entity {
    TEXT            name *
    TEXT            module
    BOOL            embedable
    BOOL            onerecord
    TEXT		    displayName
}

# ENTITY FieldScope IMPLEMENTS Domain

ENTITY Field {
    TEXT                name *
    Entity              entity *
    TEXT                type
    TEXT                scope
    Entity              refEntity
    BOOL                isLogicalKey
    LONG                lkOrder
    TEXT		        displayName
    FieldCommonSettings commonSettings
    FieldGuiSettings    guiSettings
}


ENTITY ValueStrategy IMPLEMENTS Domain

ENTITY EMBEDABLE    BoolStrategy {
    ValueStrategy   strategy
    BOOL            value
}

ENTITY EMBEDABLE FieldCommonSettings   {
    # [Field]             dependencies
    BoolStrategy          visible
    BoolStrategy          modifiable
    BoolStrategy          required
    ValueStrategy         choiceDataStrategy
}

ENTITY EMBEDABLE FieldGuiSettings   {
    BOOL         useAsDesc
    LONG         sortKey
}

ENTITY InitRecord {
    TEXT    entity          *
    TEXT    versionName     *
    LONG    versionNumber   *
}

ENTITY Language IMPLEMENTS Domain

ENTITY FieldResolution {
    Field   field *
    TEXT    code *
    TEXT    value
}

ENTITY ONEREC APIConfig {
    TEXT    title
    TEXT    description
    TEXT    termsOfService
    // contact
    TEXT    version
}